<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTrain" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="fontFamily" >@font/almarai_font</item>
        <item name="android:fontFamily" >@font/almarai_font</item>
        <item name="android:textColor">@color/dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="actionOverflowButtonStyle">@style/MenuIcon</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MenuIcon" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_menu</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>
</resources>