<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    app:circularflow_defaultRadius="15dp"
    tools:context=".payment.TicketInfo"
    android:gravity="center_vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="شراء  تذكرة"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/ll_price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_screen_title"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_ticket_price"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="00.00\nEGP"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_price_container"
                android:layout_marginTop="40dp"
                android:text="الوجهه"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_from"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_face"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/light_dark"
                android:gravity="center"
                android:text="بني سويف"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_face"
                android:layout_marginStart="330dp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="300dp"
                android:fontFamily="@font/almarai_font"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="@string/mn"
                android:textColor="@color/white"
                android:textSize="24dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="341dp"
                tools:layout_editor_absoluteY="414dp" />

            <TextView
                android:id="@+id/tv_to"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tv_face"
                android:layout_marginStart="30dp"
                android:layout_marginTop="110sp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/light_dark"
                android:gravity="center"
                android:text="القاهرة"
                android:textColor="@color/white"
                android:textSize="20sp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_face"
                android:layout_marginStart="330dp"
                android:layout_marginTop="110sp"
                android:layout_marginEnd="300dp"
                android:fontFamily="@font/almarai_font"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="@string/ela"
                android:textColor="@color/white"
                android:textSize="24dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="341dp"
                tools:layout_editor_absoluteY="414dp" />


            <Button
                android:id="@+id/b_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_to"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/blue"
                android:text="شراء"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:paddingVertical="20dp"
                />

            <Button
                android:id="@+id/b_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b_next"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/red"
                android:paddingVertical="15dp"
                android:text="الغاء"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>