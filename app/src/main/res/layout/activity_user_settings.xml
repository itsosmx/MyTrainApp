<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".user.UserSettings">

    <Button
        android:id="@+id/evalute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/blue"
        android:drawableEnd="@drawable/icon_star"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="تقييم التطبيق"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ranning"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/icon_call"
        android:background="@drawable/round_btn"
        android:text="تواصل معنا"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
       />

    <Button
        android:id="@+id/who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/icon_who"
        android:fontFamily="@font/almarai_font"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="من نحن"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:drawableLeft="@drawable/icon_share"
        android:fontFamily="@font/almarai_font"
        android:text="مشاركة  التطبيق"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp" />

    <Button
        android:id="@+id/conditions"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:drawableLeft="@drawable/icon_cond"
        android:fontFamily="@font/almarai_font"
        android:text=" الشروط  والأحكام"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"  />

    <Button
        android:id="@+id/privacy"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/almarai_font"
        android:drawableLeft="@drawable/icon_lock"
        android:text="سياسة الخوصية"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        />

    <Button
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/almarai_font"
        android:drawableLeft="@drawable/icon_account"
        android:text="الحساب"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"   />

</LinearLayout>