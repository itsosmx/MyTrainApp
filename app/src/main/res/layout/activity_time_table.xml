<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".TimeTable">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_screen_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="أجندة  المواعيد"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tv_travel"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tv_screen_title"
                android:layout_marginHorizontal="290dp"
                android:layout_marginTop="40dp"
                android:layoutDirection="rtl"
                android:text="القاهرة"
                android:textColor="@color/blue"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/tv_to"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_below="@+id/tv_screen_title"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                android:text="بني سويف"
                android:textColor="@color/blue"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_below="@+id/tv_screen_title"
                android:layout_marginStart="200dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/ic_baseline_swap_vertical_circle_24" />


            <TextView
                android:id="@+id/tv_saturday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_travel"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : السبت \n\n وقت الانطلاق : 1 مساءًا  \n\n مدة الرحلة :   1:45  \n\n رقم القطار : 914  \n\n نوع القطار : اسباني  "
                android:textColor="@color/black"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/tv_sunday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_saturday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الأحد \n\n وقت الانطلاق : 3 مساءًا  \n\n مدة الرحلة :   1:35  \n\n رقم القطار : 914  \n\n نوع القطار : روسي  "
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_monday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_sunday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الأثنين \n\n وقت الانطلاق : 2 مساءًا  \n\n مدة الرحلة :   1:45  \n\n رقم القطار : 920  \n\n نوع القطار : اسباني  "
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_tuesday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_monday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الثلاثاء \n\n وقت الانطلاق : 3 مساءًا  \n\n مدة الرحلة :   1:35  \n\n رقم القطار : 914  \n\n نوع القطار : روسي  "
                android:textColor="@color/black"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_wednesday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_tuesday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الأربعاء \n\n وقت الانطلاق : 9 صباحاً  \n\n مدة الرحلة :   1:35  \n\n رقم القطار : 916  \n\n نوع القطار : مميز  "
                android:textColor="@color/black"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tv_thursday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_wednesday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الخميس \n\n وقت الانطلاق : 7 صباحا  \n\n مدة الرحلة :   1:35  \n\n رقم القطار : 712  \n\n نوع القطار : مكيف  "
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_friday"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tv_thursday"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/white"
                android:text="\n اليوم  : الجمعة \n\n وقت الانطلاق : 10 صباحا  \n\n مدة الرحلة :   1:00  \n\n رقم القطار : 714  \n\n نوع القطار : VIP  "
                android:textColor="@color/black"
                android:layout_marginBottom="60dp"
                android:textSize="25sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
