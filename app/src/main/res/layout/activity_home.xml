<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/dark"
    android:orientation="vertical"
    android:gravity="center" >

    <Button
        android:id="@+id/btn_buy_ticket"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/light_dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="50dp"
        android:text="@string/ticket"
        android:drawableRight="@drawable/icon_train"
        android:drawableTint="@color/blue"
        android:paddingHorizontal="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btn_track"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/button_bg_left"
        android:backgroundTint="@color/light_dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="50dp"
        android:text="تتبع قطاري"
        android:drawableLeft="@drawable/icon_track_changes"
        android:drawableTint="@color/blue"
        android:paddingHorizontal="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layoutDirection="rtl"
        />
    <Button
        android:id="@+id/btn_inquiry"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/light_dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="50dp"
        android:text="إستعلام"
        android:drawableRight="@drawable/icon_access_time"
        android:drawableTint="@color/blue"
        android:paddingHorizontal="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/btn_news"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/button_bg_left"
        android:backgroundTint="@color/light_dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="50dp"
        android:text="أخبار اليوم"
        android:drawableLeft="@drawable/icon_new_releases"
        android:drawableTint="@color/blue"
        android:paddingHorizontal="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layoutDirection="rtl"
        />

    <Button
        android:id="@+id/btn_suggestions"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/light_dark"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="50dp"
        android:text="المقترحات"
        android:drawableRight="@drawable/icon_chat"
        android:drawableTint="@color/blue"
        android:paddingHorizontal="50dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        />
</LinearLayout>